---
import Layout from "../layouts/Layout.astro";


import Container from "../components/Container.astro";
import Hero from "../components/Hero.astro";
import Title from "../components/Title.astro";
import CodeIcon from "../components/icons/code.astro";
import UserIcon from "../components/icons/user.astro";
import Projects from "../components/Projects.astro";
import AboutMe from "../components/AboutMe.astro"
---

<Layout
  title="Stalin Diloné - Desarrollador Fullstack"
  description="Contrata a sdilonedev para crear tu aplicación web. Desarrollador Web en República Dominicana."
>
  <main class="px-6">
    <Container class="py-16 md:py-36">
      <Hero>
        <slot />
      </Hero>
    </Container>
    <div class="space-y-24">
      <Container id="proyectos">
        <Title>
          <CodeIcon class="size-8" />
          Proyectos
        </Title>
        <Projects />
      </Container>
      <Container id="sobre-mi">
        <Title>
          <UserIcon class="size-8" />
          Sobre mí
        </Title>
        <AboutMe />
      </Container>
    </div>
  </main>
</Layout>